<div class="columns">
  <div class="column is-10 is-offset-1 mt-4">
    <h1 class="has-text-danger is-size-2 pt-2 pb-4">Update Your Post</h1>
    <form id="editSelf-form">
      <div class="field">
        <input
          type="hidden"
          name="self-id"
          id="selfId"
          value="{{selfCare.id}}"
        />
        <label class="label has-text-link">Title</label>
        <div class="control has-icons-left has-icons-right">
          <input
            class="input is-link"
            type="text"
            placeholder="Title"
            id="selfTitle"
            value="{{selfCare.title}}"
          />
        </div>
      </div>
      <div class="field">
        <label class="label has-text-link pt-2">Please include a description of
          what helped you and/or your family unwind, as well as any resources
          you've found helpful!</label>
        <input
          class="input is-link"
          type="text"
          placeholder="What helps you unwind?"
          id="selfContent"
          value="{{selfCare.content}}"
        />
      </div>
      <div class="field py-3">
        <div class="control">
          <button
            class="button is-rounded is-warning"
            id="submitCare"
          >Update</button>
          <button
            type="button"
            id="deleteCare-btn"
            class="button is-rounded is-warning"
          > Delete</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/js/editself.js"></script>