<div class="columns">
  <div class="column is-10 is-offset-1 mt-4">
    <h1 class="has-text-danger is-size-2 pt-2 pb-4">Update Your Post</h1>
    <form id="editProject-form">
      <div class="field">
        <input
          type="hidden"
          name="project-id"
          id="projectId"
          value="{{project.id}}"
        />
        <label class="label has-text-link">Title</label>
        <div class="control has-icons-left has-icons-right">
          <input
            class="input is-link"
            type="text"
            placeholder="Title"
            id="projectTitle"
            value="{{project.title}}"
          />
        </div>
      </div>
      <div class="field">
        <label class="label has-text-link pt-2">Please include a description of
          your project and links to any resources that may be helpful and how it
          helped your student learn!</label>
        <input
          class="input is-link"
          type="text"
          placeholder="What helps you unwind?"
          id="projectContent"
          value="{{project.content}}"
        />
      </div>
      <div class="field py-3">
        <div class="control">
          <button
            class="button is-rounded is-warning"
            id="submitProject"
          >Update</button>
          <button
            type="button"
            id="deleteProject-btn"
            class="button is-rounded is-warning"
          > Delete</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/js/editproject.js"></script>