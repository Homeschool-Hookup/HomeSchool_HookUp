<div class="columns">
    <div class="column is-10 is-offset-1 mt-4">
        <h1 class="has-text-danger is-size-2">Need to relax and unwind?</h1>
        <h3 class="has-text-link is-size-4">Find out what other parents and families are doing to destress!
        </h3>
        <div class="field py-4">
            <div class="button">
                <button class="button is-rounded is-warning" id="newSelfCare"> <a href="/api/self-care/allselfcare/new">Create a new
                    post!</a></button>
            </div>
        </div>
        {{#each selfcare }}
        {{>selfcarepost-info}}
        {{/each}}
    </div>

    <script>
        document.querySelector("#newSelfCare").addEventListener("click", () => {
            document.location.replace("/api/self-care/allselfcare/new")
        })
    </script>