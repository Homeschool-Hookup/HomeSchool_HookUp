<div class="card has-background-link-light">
    <header class="card-header">
        <p class="card-header-title has-background-warning-light has-text-danger">
            <a href="post/{{id}}"></a>{{post.title}}
        </p>
    </header>
    <div class="card-content">
        <div class="content">
            <p class="has-text-link">{{post.email}}</p>
            <p class="has-text-link"> {{post.content}} </p>
        </div>
        <footer class="card-footer is-link">
            <p class="has-text-link-dark">Created by :{{user.name}} on {{format_date : date_created}}</p>
        </footer>
    </div>
</div>