<div class="columns">
    <div class="column">
        <h1 id="has-text-danger is-size-2">Log In!</h1>
        <div class="field">
            <label class="label">Email</label>
            <div class="control has-icons-left has-icons-right">
                <input class="input is-link" type="email" placeholder="Email input" value="" id="userName">
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label">Password</label>
            <div class="control has-icons-left has-icons-right">
                <input class="input is-link" type="email" placeholder="Password input" value="" id="userEmail">
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="field">
    <div class="control">
        <button class="button is-warning" id="logInBtn">Login</button>
    </div>
</div>
</div>